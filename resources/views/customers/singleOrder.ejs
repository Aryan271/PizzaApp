<section class="status">
  <div class="container mx-auto mb-6">
    <div class="status-box w-full sm:w-2/3 mx-auto">
      <div class="flex items-center justify-between flex-col md:flex-row mb-12">
        <h1 class="text-xl font-bold">Track delivery status</h1>
        <h6
          class="bg-black py-1 my-2 md:my-0 rounded-full px-4 text-xs text-white"
        >
          Order no.- <%= order._id %>
        </h6>
        <input
          id="hiddenInput"
          type="hidden"
          value="<%= JSON.stringify(order) %>"
        />
      </div>
      <ul>
        <li
          class="status_line text-sm sm:text-xl pb-16"
          data-status="order_placed"
        >
          <span>Order Placed</span>
        </li>
        <li
          class="status_line text-sm sm:text-xl pb-16"
          data-status="confirmed"
        >
          <span>Order Confirmed</span>
        </li>
        <li class="status_line text-sm sm:text-xl pb-16" data-status="prepared">
          <span>Preparation</span>
        </li>
        <li
          class="status_line text-sm sm:text-xl pb-16"
          data-status="delivered"
        >
          <span>Out for delivery</span>
        </li>
        <li class="status_line text-sm sm:text-xl" data-status="completed">
          <span>Completed</span>
        </li>
      </ul>
    </div>
  </div>
</section>
